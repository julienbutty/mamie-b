---
import Guard from "../../../../public/assets/illustrations/guard.svg";
import { Image } from "astro:assets";
---

<div
  class="col-span-2 h-56 rounded-lg bg-grid-guard shadow-xl hover:animate-pulse hover:cursor-pointer hover:border-2 hover:border-solid hover:border-my-secondary hover:shadow-2xl"
>
  <div
    class="flex h-full flex-col items-center justify-end p-3 font-bold text-white md:text-xl lg:text-2xl"
  >
    <Image src={Guard} class="w-7/12" alt="Guard" />
    <span class="pt-3">Vigilance temporaire du domicile</span>
  </div>
</div>
