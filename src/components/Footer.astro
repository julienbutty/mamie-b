---
import SectionWrapper from "../components/dividers/SectionWrapper.astro";
import Facebook from "../../public/assets/icons/rounded-facebook.svg";
import Instagram from "../../public/assets/icons/rounded-instagram.svg";
import Linkedin from "../../public/assets/icons/rounded-linkedin.svg";
import { Image } from "astro:assets";

const sections = [
  {
    title: "Services",
    items: [
      {
        title: "Déplacement",
        url: "#",
      },
      {
        title: "Courses",
        url: "#",
      },
      {
        title: "Enfant",
        url: "#",
      },
      {
        title: "Bricolage",
        url: "#",
      },
      {
        title: "Guardiennage",
        url: "#",
      },
      {
        title: "Administratif",
        url: "#",
      },
      {
        title: "Animaux",
        url: "#",
      },
    ],
  },
  {
    title: "Informations",
    items: [
      {
        title: "À propos",
        url: "/mamie-b/a-propos",
      },
      {
        title: "Fiscalité",
        url: "/mamie-b/fiscalite",
      },
      {
        title: "Aides",
        url: "/mamie-b/aides",
      },
      {
        title: "Charte",
        url: "/mamie-b/charte",
      },
      {
        title: "Tarifs",
        url: "/mamie-b/tarifs",
      },
    ],
  },
  {
    title: "Resources",
    items: [
      {
        title: "Conditions générales de vente",
        url: "#",
      },
      {
        title: "Mentions légales",
        url: "#",
      },
      {
        title: "Contact",
        url: "#",
      },
    ],
  },
];
---

<div class="pt-8 lg:pt-16">
  <div
    class="relative bg-[radial-gradient(35%_128px_at_50%_0%,theme(backgroundColor.my-secondary/5%),transparent)] py-32 lg:px-24 lg:py-32"
  >
    <div
      class="absolute inset-x-12 top-0 h-px bg-gradient-to-r from-transparent via-white/30 to-transparent"
    >
    </div>

    <div
      class="absolute left-1/2 top-0 -translate-x-1/2 -translate-y-1/2 rounded-full bg-my-background p-1.5"
    >
      <div class="h-1.5 w-8 rounded-lg bg-my-secondary/30"></div>
    </div>
    <SectionWrapper>
      <div class="flex w-full flex-col gap-8 sm:flex-row">
        <div
          class="grid w-full grid-cols-2 flex-row gap-8 sm:w-1/3 sm:flex-col sm:gap-7 lg:flex"
        >
          <div class="flex gap-3 lg:items-center">
            <a href="#">
              <span class="sr-only">Instagram</span>
              <Image src={Instagram} alt="Instagram" class="h-6 w-6" />
            </a>
            <a href="#">
              <span class="sr-only">Facebook</span>
              <Image src={Facebook} alt="Instagram" class="h-6 w-6" />
            </a>
            <a href="#">
              <span class="sr-only">Linkedin</span>
              <Image src={Linkedin} alt="Instagram" class="h-6 w-6" />
            </a>
          </div>
        </div>

        <div class="grid w-full grid-cols-2 gap-8 sm:w-2/3 lg:grid-cols-3">
          {
            sections.map((section) => (
              <div class="flex flex-col gap-4">
                <p class="text-sm text-my-primary">{section.title}</p>

                <ul class="mt-3 space-y-3">
                  {section.items.map((item) => (
                    <a
                      href="#"
                      class="text-sm font-light text-my-primary/75 transition hover:text-my-secondary"
                    >
                      <li>{item.title}</li>
                    </a>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </SectionWrapper>
  </div>
</div>
