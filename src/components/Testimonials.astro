---
import SectionBadge from "../components/dividers/SectionBadge.astro";
import SectionDescription from "../components/dividers/SectionDescription.astro";
import SectionHeadingHighlighted from "../components/dividers/SectionHeadingHighlighted.astro";
import SectionTitle from "../components/dividers/SectionTitle.astro";
import SectionWrapper from "../components/dividers/SectionWrapper.astro";

const testimonials = [
  {
    name: "Magali Pichon",
    title: "Lentilly",
    image:
      "https://images.generated.photos/TdA_3xKb49DtgqfPPu5REnQFiALErCu6i3M2I_1AqIA/rs:fit:256:256/czM6Ly9pY29uczgu/Z3Bob3Rvcy1wcm9k/LnBob3Rvcy92M18w/MDAwNTU5LmpwZw.jpg",
    body: "Grâce à l'équipe attentionnée de Mamie B, je me sens en sécurité chez moi. Ils prennent soin de moi comme une famille",
  },
  {
    name: "Julie Lefebvre",
    title: "Lyon 5ème",
    image:
      "https://images.generated.photos/mp3gkB9z2wwhyySWzQJMegNbvvLV6HbKQX1_h6BEYAc/rs:fit:256:256/czM6Ly9pY29uczgu/Z3Bob3Rvcy1wcm9k/LnBob3Rvcy92M18w/MDAwOTI5LmpwZw.jpg",
    body: "Mes parents sont entre de bonnes mains avec Mamie B. Leur dévouement et leur gentillesse les rendent heureux.",
  },
  {
    name: "Thomas Mercier",
    title: "Limonest",
    image:
      "https://images.generated.photos/vOkveSlBohR880A8z67aLHImhPr7UHdnXg06pifYvZ4/rs:fit:256:256/czM6Ly9pY29uczgu/Z3Bob3Rvcy1wcm9k/LnBob3Rvcy92M18w/MDAyNjg4LmpwZw.jpg",
    body: "Je suis reconnaissante pour le service de transport de Mamie B. Ils me conduisent là où je dois aller avec courtoisie et ponctualité",
  },
  {
    name: "Antoine Dubois",
    title: "Tassin la Demi-Lune",
    image:
      "https://images.generated.photos/d_r3VzW3lO5ZsdaHhoVX7msWku7YIrqP4Qn1yozJU54/rs:fit:256:256/czM6Ly9pY29uczgu/Z3Bob3Rvcy1wcm9k/LnBob3Rvcy92M18w/MDAyMTQ4LmpwZw.jpg",
    body: "Mamie B m'aide à prendre soin de mon chien. Ils sont très attentionnés et je sais que mon chien est entre de bonnes mains.",
  },
];
---

<div class="overflow-hidden py-8 lg:py-16">
  <SectionWrapper>
    <SectionHeadingHighlighted>
      <SectionBadge>Ce que disent nos clients</SectionBadge>

      <SectionTitle>Approuvé par nos bénéficiaires</SectionTitle>

      <SectionDescription>
        Laissez nos clients vous dire pourquoi ils adorent Mamie B
      </SectionDescription>
    </SectionHeadingHighlighted>

    <div
      class="mt-8 [mask-image:linear-gradient(to_right,transparent,black_15%,black_85%,transparent)] lg:mt-32"
    >
      <div
        class="flex w-max animate-marquee items-stretch [--duration:50s] hover:[animation-play-state:paused]"
      >
        {
          testimonials.map((testimonial) => (
            <div class="h-full px-2.5">
              <div class="relative h-full w-[28rem] rounded-2xl border border-white/5 bg-my-primary/45 px-8 py-6">
                <div class="pb-4 font-light text-white/75">
                  {testimonial.body}
                </div>

                <div class="testimonials-center mt-auto flex gap-4">
                  <img src={testimonial.image} class="h-9 w-9 rounded-full" />

                  <div class="flex flex-col text-sm">
                    <div class="text-white">{testimonial.name}</div>

                    <div class="text-white/75">{testimonial.title}</div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
        {
          testimonials.map((testimonial) => (
            <div class="h-full px-2.5" aria-hidden="true">
              <div class="relative h-full w-[28rem] rounded-2xl border border-white/5 bg-my-primary/45 px-8 py-6">
                <div class="pb-4 font-light text-white/75">
                  {testimonial.body}
                </div>

                <div class="testimonials-center mt-auto flex gap-4">
                  <img src={testimonial.image} class="h-9 w-9 rounded-full" />

                  <div class="flex flex-col text-sm">
                    <div class="text-white">{testimonial.name}</div>

                    <div class="text-white/75">{testimonial.title}</div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </SectionWrapper>
</div>
