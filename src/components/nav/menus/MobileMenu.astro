---
import NavLinkResponsive from "../NavLinkResponsive.astro";
---

<div
  class="fixed inset-0 z-50 bg-my-background md:hidden"
  id="mobile-menu-overlay"
  style="display: none;"
>
  <div class="flex justify-start pl-5 pt-4">
    <button id="close-mobile-menu" class="text-2xl text-my-secondary">
      &times;
    </button>
  </div>
  <div class="space-y-1 px-2 pb-3 pt-2">
    <a
      href="/"
      class="block rounded-md bg-my-primary px-3 py-2 text-base font-medium text-white"
      aria-current="page"
    >
      Accueil
    </a>
    <NavLinkResponsive link="Services" />
    <NavLinkResponsive link="À propos" />
    <NavLinkResponsive link="Fiscalité" />
    <NavLinkResponsive link="Aides" />
    <NavLinkResponsive link="Charte" />
    <NavLinkResponsive link="Tarifs" />
  </div>
</div>
